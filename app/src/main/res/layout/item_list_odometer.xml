<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_odometerHistory_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="20dp"
    android:gravity="center_vertical"
    android:layout_marginVertical="3dp">

    <TextView
        android:id="@+id/tv_odometerHistory_item_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_600"
        android:layout_marginRight="25dp"
        android:textSize="@dimen/item_list_odometer"
        android:gravity="right"
        android:text="01-01-1970"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_odometerHistory_item_value"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="?titleTextColor"
        android:textSize="@dimen/item_list_odometer"
        android:gravity="right"
        android:text="1 000 000"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/tv_odometerHistory_item_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?titleTextColor"
        android:textSize="@dimen/item_list_odometer"
        android:text="un"
        android:layout_marginRight="30dp"/>


</LinearLayout>